
@model Entity_DAL.Entities.SupportUser


@{
    ViewBag.Title = "Adding user";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Index</h2>
@using (Html.BeginForm(actionName: "AddUser", controllerName: "Admin", FormMethod.Post))
{
 
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputFirstName">First Name</label>
                                    @*<input class="form-control py-4" id="inputFirstName" type="text" placeholder="Enter first name" />*@
                                    @Html.TextBoxFor(expression: model => model.Name, htmlAttributes: new { @value = "Enter first name", @class = "form-control py-4" })
                                    @Html.ValidationMessageFor(expression: model => model.Name, message: null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputLastName">Last Name</label>
                                    @*<input class="form-control py-4" id="inputLastName" type="text" placeholder="Enter last name" />*@
                                    @Html.TextBoxFor(expression: model => model.LastName, htmlAttributes: new { @value = "Enter last name", @class = "form-control py-4" })
                                    @Html.ValidationMessageFor(expression: model => model.LastName, message: null, htmlAttributes: new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputEmailAddress">Email</label>
                                    @*<input class="form-control py-4" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Enter email address" />*@
                                    @Html.TextBoxFor(expression: model => model.Email, htmlAttributes: new { @value = "Enter email address", @class = "form-control py-4" })
                                    @Html.ValidationMessageFor(expression: model => model.Email, message: null, htmlAttributes: new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputPassword">Password</label>
                                    @*<input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" />*@
                                    @Html.TextBoxFor(expression: model => model.Password, htmlAttributes: new { @value = "Enter password", @class = "form-control py-4" })
                                    @Html.ValidationMessageFor(expression: model => model.Password, message: null, htmlAttributes: new { @class = "text-danger" })


                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputConfirmPassword">Phone Number</label>
                                    @*<input class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Confirm password" />*@
                                    @Html.TextBoxFor(expression: model => model.PhoneNumber, htmlAttributes: new { @value = "Enter Phone Number", @class = "form-control py-4" })
                                    @Html.ValidationMessageFor(expression: model => model.PhoneNumber, message: null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputConfirmPassword">Role</label>
                                    @*<input class="form-control py-4" id="inputConfirmPassword" type="text" placeholder="RoleId" />*@
                                    @Html.DropDownListFor(expression: model => model.RoleId, new List<SelectListItem>
                                               { new SelectListItem{Text="ADMIN", Value="1"},
                                                 new SelectListItem{Text="SUPPORT TECH", Value="3"}}, "Please select", htmlAttributes: new { @class = "form-control py-4" })
                                </div>

                            </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group mt-4 mb-0">
                                    <input type="submit" value="Create Account" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                    </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


        

}
